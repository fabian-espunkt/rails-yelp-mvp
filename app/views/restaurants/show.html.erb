<h2>Restaurant Details for <%= @restaurant.name %></h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h2>Reviews for <%= @restaurant.name %></h2>
  <% @restaurant.reviews.each do |review| %>
    <p><strong>Comment 💬:</strong> "<%= review.content %>", <strong>Rating:</strong> <%= review.rating %> ⭐️</p>
  <% end %>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %> |
<%= link_to 'Create Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
